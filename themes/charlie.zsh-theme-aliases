function go()
{
  for file in "$@"
  do
    gnome-open "$file"
  done
}

function build()
{
  if [[ $1 != '-s' ]]; then
    count=$(git show --pretty="format:" --name-only | grep version.rb | wc -l)
    if [ $count = 0 ]; then
      echo "No version change in last commit";
      return 1
    fi
  fi
  gemspec=$(ls -1 | grep gemspec)
  if [[ $gemspec == "" ]]; then
    echo "No gemspec found";
    return 1;
  fi
  echo "Building gem from $gemspec"
  gem=$(gem build $gemspec | grep File | awk '{print $2}')
  echo "Pushing gem $gem";
  gem inabox $gem
  success=$?
  if [ $success != 0 ]; then
    return 1;
  fi
  version=$(echo ${gem##*-})
  if [[ $# != 0 ]]; then
    if [[ $1 != '-s' ]]; then
      tag=`echo "$1_${version%.*}"`
    elif [[ $# != 1 ]]; then
      tag=`echo "$2_${version%.*}"`
    else
      tag=`echo "${version%.*}"`
    fi
  else
    tag=`echo "${version%.*}"`
  fi
  echo "Tagging repo $tag"
  git tag $tag
  git push origin $tag
}


