# Rails

function findroot()
{
  while [ ! -e config/environment.rb  -a  `pwd` != '/' ]
  do
    cd ..
  done

  [ `pwd` != '/' ] && pwd
}

alias cdr='rr=`findroot` ; [ z$rr != z ] && cd $rr'
alias runner='sudo su rails_runner'
alias apps='sudo su rails_apps'

